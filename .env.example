# Docker Compose Environment Variables Template
# Copy this file to .env and update with your actual values

# ============================================
# MONGODB CONFIGURATION
# ============================================
MONGO_USERNAME=admin
MONGO_PASSWORD=change_me_in_production
MONGO_DATABASE=TaskManagement
MONGO_COLLECTION=tasks
MONGO_PORT=27018

# MongoDB Connection String
# Local: mongodb://admin:password@mongodb:27017
# Remote: mongodb+srv://user:pass@cluster.mongodb.net/dbname?retryWrites=true&w=majority
MONGO_CONNECTION_STRING=mongodb://admin:password@mongodb:27017

# ============================================
# API CONFIGURATION
# ============================================
API_PORT=5175
ASPNETCORE_ENVIRONMENT=Production

# ============================================
# JWT CONFIGURATION (CHANGE IN PRODUCTION!)
# ============================================
# Generate a secure key with: openssl rand -base64 32
JWT_SECRET_KEY=generate-a-secure-random-key-at-least-32-characters-long
JWT_ISSUER=TaskFlowAPI
JWT_AUDIENCE=TaskFlowClient
JWT_EXPIRATION_HOURS=24

# ============================================
# CLIENT CONFIGURATION
# ============================================
CLIENT_PORT=3000

# React App API URL (BUILD TIME - baked into bundle)
# Local: http://localhost:5175
# Production: https://your-api-domain.com
REACT_APP_API_URL=http://localhost:5175
